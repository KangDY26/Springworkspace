 <mapper namespace="Fruits">
	<select id="getAll" resultType="fruit">
		SELECT
			fid, fname, price, qty, exp_date, location_id
		FROM
			fruits
	</select>
	
		<select id="getOnce" resultType="fruit">
		SELECT
			fid, fname, price, qty, exp_date, location_id
		FROM
			fruits
		WHERE fid = #{fid}
	</select>
</mapper>

